<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Sync.SignInActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/background_image_one_signin" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/backFloatingButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:backgroundTint="#ffffff"
            android:src="@drawable/ic_baseline_arrow_back_36"
            app:elevation="6dp"
            app:fabSize="normal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You search We serve"
            android:layout_marginTop="150dp"
            android:layout_marginLeft="60dp"
            android:textStyle="bold"
            android:textSize="28sp"
            android:textColor="#ffffff"/>

        <EditText
            android:id="@+id/sign_in_email_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="350dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/email_bg"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:padding="15dp" />

        <EditText
            android:id="@+id/sign_in_password_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sign_in_email_edit_text"
            android:layout_marginStart="30dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/email_bg"
            android:hint="Password"
            android:inputType="textPassword"
            android:padding="15dp" />

        <Button
            android:id="@+id/sign_in_btn"
            android:layout_below="@+id/sign_in_password_edit_text"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="120dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/email_bg"
            android:text="Sign in" />

        <TextView
            android:id="@+id/forgotten_password_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/sign_in_btn"
            android:layout_marginStart="130dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="120dp"
            android:hint="Forgotten Password?"
            android:textSize="15sp" />

        <Button
            android:id="@+id/sign_in_google"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/forgotten_password_text_view"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="#5C3963"
            android:drawableLeft="@drawable/google"
            android:text="Sign In with Google"
            android:textColor="#F8F3F3" />

<!--        <Button-->
