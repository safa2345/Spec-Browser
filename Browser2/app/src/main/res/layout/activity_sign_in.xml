<!--            android:layout_height="wrap_content"-->
<!--            android:layout_marginLeft="100dp"-->
<!--            android:layout_marginTop="20dp"-->
<!--            android:background="@drawable/email_bg"-->
<!--            android:backgroundTint="#ebdbb2"-->
<!--            android:text="Create New Account" />-->

    </RelativeLayout>

</RelativeLayout>